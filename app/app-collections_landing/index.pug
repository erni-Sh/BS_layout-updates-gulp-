	section.ColLP__top(style=`background:${BG}`)
		.ColLP__top__wrapper.container
			.ColLP__top__pictures
				.ColLP__top__pictures__wrapper
					.ColLP__top__circles
						include includes/_svg/circles.svg
					.ColLP__top__app-icon
						img(
							src= mainIcon
							onload=`this.parentElement.classList.add('ColLP__top__app-icon_isVisible')`
						)
						//include includes/_svg//wa_main_top.svg

			.ColLP__top__left-tiles
				include includes/_svg/left-tiles.svg

			.ColLP__top__left
				.ColLP__top__logo
					include includes/_svg/buildstore-logo_full.svg
				.ColLP__top__title= title
				.ColLP__top__descr= descr
				.ColLP__top__spacer
				.ColLP__top__button
					button.BS_button
						span Get access now
					//a.url-link.btn.item-block(href='/accounts/register/' onclick="fbq('track', 'user_tap_sign_up_button')")
					//    | SPIN THE WHEEL

	section.ColLP__apps
		.ColLP__apps__wrapper.container
			include includes/_mixinLPCatalogApp
			+LPCatalogApp
			+LPCatalogApp
			+LPCatalogApp

	section.ColLP__sideloading
		.container
			.ColLP__sideloading__wrapper
				.ColLP__sideloading__picWrapper
					.ColLP__sideloading__background
						include includes/_svg/sideloading_BG.svg
					.ColLP__sideloading__arrow.js-observer
						include includes/_svg/sideloading_arrow.svg
				.ColLP__sideloading__inner
					.ColLP__sideloading__left
					.ColLP__sideloading__right.js-observer
						.ColLP__sideloading__title
							| What is sideloading?
						.ColLP__sideloading__descr
							p Sideloading means downloading apps which are not available on&nbsp;the official Appstore. Unlike jailbreaking, it&nbsp;doesn&rsquo;t require any modifications to&nbsp;your iOS device.
							p Using BuildStore to&nbsp;get apps is&nbsp;easy and doesn&rsquo;t impose any risk on&nbsp;your device or&nbsp;personal data.

	section.ColLP__promocode(style=`background:${BG}`)
		.ColLP__promocode__wrapper.container.js-observer
			.ColLP__promocode__pictures
				.ColLP__promocode__pictures__wrapper
					.ColLP__promocode__circles
						include includes/_svg/circles.svg
					.ColLP__promocode__big-tiles
