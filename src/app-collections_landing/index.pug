	- var isCirclesOnBg = false;
	- var title = 'Special offers for WhatsApp Tweaks!';
	- var descr = 'Make your choise and use this incredible features!';
	- var mainIcon = '/app-collections_landing/static/assets/app-collections_landing/wa_main_pic.svg';
	- var buttonBG = '#FFBA07';
	- var PROMOCODE = "WHAT";
	- var discount = '90%';

	.main_wrapper
		section.ColLP__top(style=`background:${BG}`)
			if imageBG
				img(src= imageBG
					onload=`this.classList.add('ColLP__imageBG_isVisible')` alt="background").ColLP__imageBG
			.ColLP__top__wrapper.container
				.ColLP__top__pictures
					.ColLP__top__pictures__wrapper
						if isCirclesOnBg
							.ColLP__top__circles
								include includes/_svg/circles.svg
						.ColLP__top__app-icon
							img(
								src= mainIcon
								width='550'
								height='550'
								onload=`this.parentElement.classList.add('ColLP__top__app-icon_isVisible')`
							)

				.ColLP__top__left-tiles
					include includes/_svg/left-tiles.svg

				.ColLP__top__left
					a(href='/' data-event-name='user_tap_logo').ColLP__top__logo.js-gaEvent
						include includes/_svg/buildstore-logo_full.svg
					.ColLP__top__title= title
					.ColLP__top__descr= descr
					.ColLP__top__spacer
					.ColLP__top__button
						a(href='')
							button.BS_button
								span Get access now

		section.ColLP__apps
			.ColLP__apps__wrapper.container
				include includes/_mixinLPCatalogApp
				+LPCatalogApp
				+LPCatalogApp
				+LPCatalogApp

		section.ColLP__sideloading
			.container
				.ColLP__sideloading__wrapper
					.ColLP__sideloading__picWrapper
						.ColLP__sideloading__trumb.js-observer
							img(
								src='https://erni-sh.github.io/staticBS/assets/landings/app_collections/pokemon_icon.png' alt=''
								onload="this.parentElement.classList.add('ColLP__sideloading__trumb_isVisible')")
